@model IEnumerable<Task_Management.Models.Project>

@{
    ViewData["Title"] = "Project Index";
    var projects = ViewData["Projects"] as IEnumerable<Task_Management.Models.Project>;
}

<h1 class="my-4 text-center">Projects</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-primary btn-lg">Create New</a>
</p>

<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="card shadow-sm" style="border-radius:0">
            <div class="card-header bg-dark text-white">
                <h4>Projects</h4>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Project Name</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var project in projects)
                        {
                            <tr>
                                <td>@project.ProjectName</td>
                                <td>@project.CreatedDate.ToString("yyyy-MM-dd")</td>
                                <td>@project.EndDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@project.ProjectId" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-action="Details" asp-route-id="@project.ProjectId" class="btn btn-info btn-sm">Details</a>
                                    <a asp-action="Delete" asp-route-id="@project.ProjectId" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0;
    }

    .table {
        margin-top: 20px;
        width: 100%;
    }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

    .btn {
        border-radius: 20px;
        margin: 2px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

        .btn-info:hover {
            background-color: #138496;
            border-color: #117a8b;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    h1, h4 {
        font-family: 'Arial Black', Gadget, sans-serif;
        color: #343a40;
    }

    h4 {
        color: white;
    }

    .thead-dark th {
        color: white;
        background-color: #343a40;
    }

</style>