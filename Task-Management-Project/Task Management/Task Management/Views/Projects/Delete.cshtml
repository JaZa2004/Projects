@model Task_Management.Models.Project

@{
    ViewData["Title"] = "Delete";
    var project = ViewData["project"] as Task_Management.Models.Project;
}

<h1 class="my-4">Delete Project</h1>

<div class="card shadow-sm" style="border-radius:0">
    <div class="card-header bg-danger text-white">
        <h4>Are you sure you want to delete this project?</h4>
    </div>
    <div class="card-body">
        <h5 class="card-title">@project.ProjectName</h5>
        <p class="card-text">@project.Description</p>

        <dl class="row">
            <dt class="col-sm-3">Created Date:</dt>
            <dd class="col-sm-9">@project.CreatedDate.ToShortDateString()</dd>
            <dt class="col-sm-3">End Date:</dt>
            <dd class="col-sm-9">@project.EndDate.ToShortDateString()</dd>
        </dl>

        <hr />

        <form asp-action="Delete">
            <input type="hidden" asp-for="ProjectId" />
            <button type="submit" class="btn btn-danger mr-2"><i class="fas fa-trash-alt mr-1"></i>Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card {
        border-radius: 10px;
        margin-top: 20px;
    }

    .card-header {
        border-radius: 10px 10px 0 0;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #333;
    }

    .card-text {
        font-size: 1rem;
        color: #666;
    }

    .btn {
        border-radius: 20px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    h1 {
        font-family: 'Arial Black', Gadget, sans-serif;
        color: #343a40;
    }

</style>