    #container {
        position: relative;
        width: 30%;
        height: 74%;
        border-radius: 30px;
        perspective: 1000px;
        box-shadow: 0 0 0 4px white; /* Use a box shadow to simulate the border */
    }

    .form-div {
        position: absolute;
        top: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        border-radius: 30px;
        backface-visibility: hidden;
        transition: transform 0.6s ease, opacity 0.6s ease;
    }


    #logindiv {
        transform: rotateY(0deg);
        opacity: 1;
    }

    #registerdiv {
        transform: rotateY(180deg);
        opacity: 0;
    }

    #container.show-register #logindiv {
        transform: rotateY(-180deg);
        opacity: 0;
    }

    #container.show-register #registerdiv {
        transform: rotateY(0deg);
        opacity: 1;
    }

    .bottom {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 70%;
    }

        .bottom input {
            width: 70%;
            height: 35px;
            border: 2px solid white;
            border-radius: 20px;
            margin: 10px 0 5px 0;
            font-size: 17px;
            padding-left: 10px;
            font-weight: bold;
        }

            .bottom input::placeholder {
                font-size: 17px;
            }

    .errorMessage {
        color: orangered;
        text-decoration: none;
        font-size: 20px;
        margin: 0;
        text-align: left;
    }

    .top {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 30%;
        margin-top: 20px;
    }

        .top img {
            border-radius: 50%;
            width: 40%;
            border: 6px solid white;
        }

    p {
        color: white;
        font-size: 20px;
    }

    input[type="button"] {
        color: white;
        cursor: pointer;
        transition: transform 0.3s ease;
        background-color: transparent;
    }

        input[type="button"]:hover {
            transform: scale(1.05);
            opacity: 0.9;
        }

    button {
        width: 100%;
        border: none;
        border-radius: 20px;
        font-size: 20px;
        padding: 2px;
        cursor: pointer;
        transition: 0.3s ease;
    }

        button:hover {
            background-color: rgb(0,0,0,0.7);
            color: white;
        }
