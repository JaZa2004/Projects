@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
    <script src="~/Scripts/LoginScript.js"></script>
</head>
<body ng-app="LoginApp">
    <div id="container">
        <div id="logindiv" class="form-div" ng-controller="LoginController">
            <div class="top">
                <img src="~/Content/images/user.png" />
            </div>
            <div class="bottom">
                <input type="text" placeholder="Enter your Username" ng-model="Username" />
                <div ng-if="errorMessageUsername && clicked && !Username">
                    <p ng-bind="errorMessageUsername" class="errorMessage"></p>
                </div>
                <input type="password" placeholder="Enter your password" ng-model="Password" />
                <div ng-if="errorMessagePassword && clicked && !Password">
                    <p ng-bind="errorMessagePassword" class="errorMessage"></p>
                </div>
                <div ng-if="errorMessageGeneral">
                    <p ng-bind="errorMessageGeneral" class="errorMessage"></p>
                </div>
                <input type="button" value="Login" ng-click="login()" />
            </div>
        </div>
        <div id="registerdiv" class="form-div" ng-controller="RegisterController">
            <div class="top">
                <img src="~/Content/images/user.png" />
            </div>
            <div class="bottom">
                <input type="text" placeholder="Enter your Username" ng-model="Username" />
                <div ng-if="errorMessageUsername && clicked && !Username">
                    <p ng-bind="errorMessageUsername" class="errorMessage"></p>
                </div>
                <input type="password" placeholder="Enter your password" ng-model="Password" />
                <div ng-if="errorMessagePassword && clicked && !Password">
                    <p ng-bind="errorMessagePassword" class="errorMessage"></p>
                </div>
                <input type="password" placeholder="Confirm your password" ng-model="ConfirmPassword" />
                <div ng-if="errorMessageConfirmPassword && clicked && !ConfirmPassword">
                    <p ng-bind="errorMessageConfirmPassword" class="errorMessage"></p>
                </div>
                <div ng-if="errorMessageGeneral && clicked">
                    <p ng-bind="errorMessageGeneral" class="errorMessage"></p>
                </div>
                <input type="button" value="Register" ng-click="register()" />
            </div>
        </div>
    </div>
    <div>
        <p id="loginlabel" style="display:none">----Already have an Account? LogIn-----</p>
        <button id="loginlink" style="display:none">Login</button>
    </div>
    <div>
        <p id="registerlabel">----Don't have an Account?-----</p>
        <button id="registerlink">Register</button>
    </div>
    <script>
        document.getElementById("registerlink").addEventListener('click', function () {
            document.getElementById("container").classList.add('show-register');
            document.getElementById("registerlink").style.display = 'none';
            document.getElementById("registerlabel").style.display = 'none';
            document.getElementById("loginlink").style.display = 'block';
            document.getElementById("loginlabel").style.display = 'block';

        });
        document.getElementById("loginlink").addEventListener('click', function () {
            document.getElementById("container").classList.remove('show-register');
            document.getElementById("registerlink").style.display = 'block';
            document.getElementById("registerlabel").style.display = 'block';
            document.getElementById("loginlink").style.display = 'none';
            document.getElementById("loginlabel").style.display = 'none';
        });
    </script>
</body>
</html>
